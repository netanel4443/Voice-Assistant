<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.fragments.AddedAppsFragment"
    android:orientation="vertical"
    android:background="#ffff"
    android:clickable="false">
   <TextView
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:id="@+id/descriptionAddedApps"
       android:text="@string/delete_app_description"
       android:textColor="#92000000"
       android:textSize="15sp"
       android:layout_marginLeft="10dp"
       android:layout_marginRight="10dp"
       android:layout_marginTop="10dp"
       app:layout_constraintTop_toTopOf="parent"/>
   <androidx.recyclerview.widget.RecyclerView
       android:layout_width="match_parent"
       android:layout_height="0dp"
       android:id="@+id/recyclerFragAddedApps"
       android:elevation="10dp"
       android:background="#3CFFD7D7"
       android:layout_marginBottom="5dp"
       app:layout_constraintTop_toBottomOf="@id/descriptionAddedApps"
       app:layout_constraintBottom_toBottomOf="parent"
       android:layout_marginTop="20dp"
       />

</androidx.constraintlayout.widget.ConstraintLayout>